{% block content %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<section class="vh-100 d-flex justify-content-center align-items-center" style="background-color:#a7b3ff; background-size: cover; background-position: center;">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg text-center p-4">
  <img class="img-fluid rounded-circle mx-auto mb-4" src="https://static.ndmais.com.br/2021/04/istock-1159132497-800x800.jpg" alt="Logo" style="max-width: 100px;">
 
          <h3 class="mb-4">Conectamos quem valoriza o futuro com quem faz a diferença hoje.</h3>
          <form action="/login" method="post">
            <div class="mb-3">
              <input type="email" class="form-control" name="email" id="email" placeholder="Email" required autofocus>
            </div>
            <div class="mb-3">
              <input type="password" class="form-control" name="password" id="password" placeholder="Senha" required>
            </div>
            {% if error %}
              <p style="color: red;">{{ error }}</p>
            {% endif %}
            <button type="submit" class="btn btn-primary btn-lg">Entrar agora</button>
          </form>
          <p class="mt-3 text-muted">Não tem uma conta? <a href="/registrar-se">Cadastre-se</a></p>
        </div>
      </div>
    </div>
  </div>
</section>


<style>
@media (max-width: 768px) {
    section {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 0;
    }

    .col-md-6.col-xl-7 {
        display: none;
    }

    .col-12.col-md-6.col-xl-5 {
        justify-content: center;
        align-items: center;
    }

    .card {
        height: auto;
        width: 100%;
    }

    .card-body {
        padding: 2rem;
    }
}
</style>
{% endblock %}
